{
  "extends": [
    "standard",
    "plugin:jsdoc/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "jsdoc"
  ],
  "rules": {
    "jsdoc/newline-after-description": "off"
  },
  "overrides": [
    {
      "files": ["*.jxa"],
      "env": {
        "applescript": true,
        "es6": true
      },
      "globals": {
        "Automation": "readonly",
        "Application": "readonly",
        "Library": "readonly",
        "Path": "readonly",
        "Progress": "readonly",
        "ObjectSpecifier": "readonly",
        "ObjC": "readonly",
        "Ref": "readonly",
        "$": "readonly",
        "console.log": "readonly",
        "delay": "readonly"
      },
      "rules": {
        // Accept void ObjC bridge function expressions.
        "no-unused-expressions": "off"
      }
    },
    {
      "files": ["Injections/*.jxa"],
      "rules": {
        // Accept monkey-patching of standard objects.
        "no-extend-native": "off"
      }
    },
    {
      "files": ["Libraries/*.jxa"],
      "rules": {
        // Accept top-level function definitions without use in the file.
        "no-unused-vars": "off"
      }
    }
  ]
}
